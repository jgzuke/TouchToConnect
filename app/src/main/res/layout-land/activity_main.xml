<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:id="@+id/full_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/label_color"
        android:gravity="center"
        android:elevation="5dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_title_land"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textSize="35sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/name_input_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_person_black_24dp"
                        android:gravity="center"/>
                    <com.rey.material.widget.EditText
                        android:id="@+id/name_input"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"

                        android:singleLine="true"
                        android:lines="1"
                        android:maxLines="1"

                        android:textSize="20sp"
                        android:textColor="@color/text_color"
                        material:et_dividerColor="@color/label_color"
                        material:et_dividerHeight="2dp"

                        android:hint="@string/name"
                        android:textColorHint="@color/hint_color"
                        material:et_labelEnable="true"
                        material:et_labelTextSize="14sp"
                        material:et_labelTextColor="@color/label_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/number_input_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_local_phone_black_24dp"
                        android:gravity="center"/>
                    <com.rey.material.widget.EditText
                        android:id="@+id/number_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:singleLine="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:inputType="number"

                        android:textSize="20sp"
                        android:textColor="@color/text_color"
                        material:et_dividerColor="@color/label_color"
                        material:et_dividerHeight="2dp"

                        android:hint="@string/number"
                        android:textColorHint="@color/hint_color"
                        material:et_labelEnable="true"
                        material:et_labelTextSize="14sp"
                        material:et_labelTextColor="@color/label_color"

                        material:et_supportMode="charCounter"
                        material:et_supportMaxChars="11"
                        material:et_supportTextSize="14sp"
                        material:et_supportTextColor="@color/label_color"
                        material:et_supportTextErrorColor="@color/error_color"
                        material:et_dividerErrorColor="@color/error_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/email_input_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_local_post_office_black_24dp"
                        android:gravity="center"/>
                    <com.rey.material.widget.EditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:singleLine="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"

                        android:textSize="20sp"
                        android:textColor="@color/text_color"
                        material:et_dividerColor="@color/label_color"
                        material:et_dividerHeight="2dp"

                        android:hint="@string/email"
                        android:textColorHint="@color/hint_color"
                        material:et_labelEnable="true"
                        material:et_labelTextSize="14sp"
                        material:et_labelTextColor="@color/label_color" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">
            <com.rey.material.widget.Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/label_color"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="RATE"
                material:rd_enable="true"/>
            <com.rey.material.widget.Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/label_color"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="SHARE"
                material:rd_enable="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
